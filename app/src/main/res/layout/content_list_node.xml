<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_list_node"
    tools:context="il.ac.shenkar.david.todolistex2.ListNodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout1">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/linearLayout4">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/newTaskDesc"
            android:hint="   Enter Task Description"
            android:maxLength="100"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Priority:"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <RadioButton
                android:id="@+id/lowRBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/priority_low"
                android:layout_marginLeft="5dp"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/medRBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Normal"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/highRBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Urgent"
                android:layout_marginRight="5dp"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout3">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="4dp"
        android:id="@+id/linearLayout8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"

        android:text="Time and Date:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/todaydatebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Today"
                android:layout_marginLeft="3dp"
                android:onClick="onRadioTimeDateButtonClicked"/>
            <RadioButton
                android:id="@+id/tomorrowdatebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tomorrow"
                android:onClick="onRadioTimeDateButtonClicked"/>
            <RadioButton
                android:id="@+id/customdatebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="1dp"
                android:text="Custom"
                android:onClick="onRadioTimeDateButtonClicked"/>
        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/linearLayout6">

        <EditText
            android:id="@+id/taskDateEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:hint="Pick Date.."
            />

        <EditText
            android:id="@+id/taskTimeEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:hint="Pick Time.."
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:id="@+id/linearLayout7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Category:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/category_array"
            android:layout_marginTop="18dp"
            android:id="@+id/categorySpinner"
            android:textAlignment="center"/>
    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/newTaskNotes"
        android:hint="        Add Task Notes"
        android:maxLines="10"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="90dp"
        android:layout_alignTop="@+id/linearLayout7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="60dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout5">
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Task"
        android:id="@+id/addTaskbtn"
        android:layout_marginBottom="70dp"
        android:onClick="addTaskBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/linearLayout5"
        android:layout_alignEnd="@+id/linearLayout5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discard Task"
        android:id="@+id/discTaskbtn"
        android:onClick="discardBtnClick"
        android:layout_marginBottom="70dp"
        android:layout_alignTop="@+id/addTaskbtn"
        android:layout_alignLeft="@+id/linearLayout6"
        android:layout_alignStart="@+id/linearLayout6" />

</RelativeLayout>